<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/blue_YM"
            android:src="@drawable/baseline_arrow_back_ios_24" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:layout_weight="1"
            android:background="@color/blue_YM"
            android:fontFamily="sans-serif-black"
            android:text="Create Lost / Found Post"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/postButton"
            android:layout_width="57dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/blue_YM"
            android:src="@drawable/baseline_done_24" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="67dp"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_profile"
            android:layout_width="70dp"
            android:layout_height="58dp"
            android:src="@drawable/pic" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="289dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:text="User_name"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <EditText
        android:id="@+id/info"
        android:layout_width="358dp"
        android:layout_height="48dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Information"
        android:inputType="text" />

    <Spinner
        android:id="@+id/categorySpinner"
        android:layout_width="348dp"
        android:layout_height="43dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/customCategoryEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Enter custom category"
        android:visibility="gone" />

    <Spinner
        android:id="@+id/stateSpinner"
        android:layout_width="353dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="58dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/lostButton"
            android:layout_width="173dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/yellow_YM"
            android:text="Lost"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/foundButton"
            android:layout_width="156dp"
            android:layout_height="48dp"
            android:textStyle="bold"
            android:backgroundTint="@color/yellow_YM"
            android:text="Found"
            android:textColor="@color/black" />
    </LinearLayout>

    <TextView
        android:id="@+id/blank1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:id="@+id/blank2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_YM"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/insert_imageButton"
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:src="@drawable/baseline_image_24" />

        <ImageButton
            android:id="@+id/open_cameraButton"
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:src="@drawable/baseline_photo_camera_24" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_centerInParent="true"
            android:visibility="invisible" />
    </LinearLayout>

    <TextView
        android:id="@+id/blank3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_YM"
        android:text="" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView"
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.428"
        app:lottie_autoPlay="true"
        app:lottie_cacheComposition="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/data_2"
        app:lottie_speed="1" />


</LinearLayout>