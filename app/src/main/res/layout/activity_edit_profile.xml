<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <ImageView
        android:id="@+id/editProfileImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:contentDescription="Profile Image"
        android:src="@drawable/img" />

    <EditText
        android:id="@+id/editNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editProfileImageView"
        android:layout_marginTop="16dp"
        android:hint="Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/editEmailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editNameEditText"
        android:layout_marginTop="8dp"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/editCountryEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editEmailEditText"
        android:layout_marginTop="8dp"
        android:hint="Country"
        android:inputType="text" />

    <EditText
        android:id="@+id/editDateEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editCountryEditText"
        android:layout_marginTop="8dp"
        android:hint="Date"
        android:inputType="date" />

    <EditText
        android:id="@+id/editPhoneEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editDateEditText"
        android:layout_marginTop="8dp"
        android:hint="Phone Number"
        android:inputType="phone" />
    <EditText
        android:id="@+id/editStateEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editPhoneEditText"
        android:layout_marginTop="8dp"
        android:hint="State"
        android:inputType="text" />

    <Button
        android:id="@+id/saveChangesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editStateEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/yellow_YM"
        android:textColor="@color/black"
        android:text="Save Changes" />

</RelativeLayout>